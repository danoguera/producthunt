<!DOCTYPE html>
<html>
  <head>
    <title>ProducthuntVer0</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to "Product Hunt", root_path, class: "navbar-brand" %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <% if signed_in? %>
            <li><%= link_to "<span class='fa fa-plus fa-2x'</span>".html_safe, new_product_path %></li>
            <li class="nav-item dropdown">
              <a href="#" class="nav-link" data-toggle="dropdown">
                <%= image_tag current_user.gravatar_url, :class => "rounded-circle" %>
              </a>
              <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <li><%= link_to "Logout", logout_path, method: :delete, :class => "dropdown-item" %></li>
              </ul>
            </li> 
            <% else %>
             <li><%= link_to "Sign Up", new_user_path %></li>
             <li><%= link_to "Login", login_path %></li>
          <% end %>
        </ul>  
      </div>
    </nav>

    <% if flash[:notice] %>
      <div class="alert alert-info"><%= flash[:notice] %></div>
    <% end %>

    <%= yield %>
  </body>
</html>
