<div class="container">
	<div class="row">
		<div class="col-sm-6 offset-3">
			<h1>Login</h1>
			<%= form_tag controller: :sessions, action: :create do %>
				<div class="form-group">
					<%= label_tag(:email, "E-mail") %>
					<%= email_field_tag(:email, nil, class: 'form-control input-lg') %>
				</div>
				<div class="form-group">
					<%= label_tag(:password, "Password") %>
					<%= password_field_tag(:password, nil, class: 'form-control input-lg') %>
				</div>
				<div>
					<%= submit_tag("Login", class: 'btn btn-primary btn-lg btn-block') %>
				</div>
			<% end %>	
		</div>
	</div>
</div>