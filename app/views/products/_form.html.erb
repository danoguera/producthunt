<div class="container">
	<div class="row">
		<div class="col-sm-6 offset-3">
			<h1><%= form_title %></h1>
			<%= form_for @product do |f| %>
				<div class="form-group">
					<%= f.text_field :name, class: "form-control input-lg", placeholder: "Enter the name of the product" %>
				</div>
				<div class="form-group">
					<%= f.url_field :url, class: "form-control input-lg", placeholder: "Enter the Product URL" %>
				</div>
				<div class="form-group">
					<%= f.text_area :description, class: "form-control input-lg", placeholder: "Enter the product description" %>
				</div>
				<div>
					<%= f.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
				</div>
			<% end %>
		</div>
	</div>
</div>