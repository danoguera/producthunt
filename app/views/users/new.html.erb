<div class="container">
	<div class="row">
		<div class="col-sm-6 offset-3">
			<h1>Create an Account</h1>
			
			<% if @user.errors.any? %>
				<div class="alert alert-danger">
					<ul>
						<% @user.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			<% end %>	

			<%= form_for @user do |fa| %>
			<div class="form-group">
				<%= fa.email_field :email, class: "form-control input-lg", placeholder: "E-mail" %>
			</div>
			<div class="form-group">
				<%= fa.password_field :password, class: "form-control input-lg", placeholder: "Password" %>
			</div>
			<div class="form-group">
				<%= fa.text_field :name, class: "form-control input-lg", placeholder: "Name" %>
			</div>
			<div class="input-group">
				<span class="input-group-text" id="basic-addon1">@</span>
				<%= fa.text_field :twitter_handle, class: "form-control", placeholder: "Twitter" %>
			</div>
			<div class="form-group">
				<%= fa.submit class: "btn btn-primary btn-block btn-lg" %> 
			</div>
			<% end %>
		</div>
	</div>
</div>