<div class="container">
	<div class="row">
		<div class="col-sm-6 offset-3">
			<h1>Create an Account</h1>
			<%= form_for @user do |f| %>
			<div class="form-group">
				<%= f.email_field :email, class: "form-control input-lg", placeholder: "E-mail" %>
			</div>
			<div class="form-group">
				<%= f.password_field :password, class: "form-control input-lg", placeholder: "Password" %>
			</div>
			<div class="form-group">
				<%= f.text_field :name, class: "form-control input-lg", placeholder: "Name" %>
			</div>
			<div class="input-group">
				<span class="input-group-text" id="basic-addon1">@</span>
				<%= f.text_field :twitter_handle, class: "form-control", placeholder: "Twitter" %>
			</div>
			<div class="form-group">
				<%= f.submit class: "btn btn-primary btn-block btn-lg" %> 
			</div>
			<% end %>
		</div>
	</div>
</div>